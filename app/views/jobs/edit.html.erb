<h1> Edit a job </h1>

<%= simple_form_for @job do |f| %>

<%= f.input :title %>
<%= f.input :description %>
<%= f.input :category, :collection => ["dps","healbooner", "booner", "tank"], :selected => "dps" %>
<%= f.input :wage_lower_bound, :label => "薪资下限" %>
<%= f.input :wage_upper_bound, :label => "薪资上限" %>
<%= f.input :city, :label => "城市" %>
<%= f.input :company, :label => "公司" %>
<%= f.input :contact_email %>

<%= f.input :is_hidden %>

  <%= f.submit "Submit" %>
<% end %>
