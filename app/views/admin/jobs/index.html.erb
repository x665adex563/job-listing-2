<br><br>

<div class="pull-right">
  <%= link_to("Add a job", new_admin_job_path, :class => "btn btn-default" ) %>
</div><br><br>


<% @jobs.each do |job| %>
  <div class="container-fluid jobs-show-page">
    <div class="col-md-8 col-md-offset-2 col-lg-8 col-lg-offset-2">

      <div class="pull-right">
        <%= link_to("Edit", edit_admin_job_path(job), :class => "btn btn-xs btn-info") %>
        <%= link_to("Destroy", admin_job_path(job), :method => :delete, :class => "btn btn-xs btn-danger", :data => { :confirm => "Are you sure?" }) %>
        <% if job.is_hidden %>
          <%= link_to("Publish", publish_admin_job_path(job) , :method => :post, :class => "btn btn-xs btn-success") %>
        <% else %>
          <%= link_to("Hide", hide_admin_job_path(job), :method => :post,  :class => "btn btn-xs btn-warning") %>
        <% end %>
        <%= link_to("Resumes Count", admin_job_resumes_path(job)) %> <span class="badge"><%= job.resumes.count %></span>
      </div>

      <p>
      <%= render_job_status(job) %>
      <%= link_to(job.title, job_path(job)) %>
      </p>

      <div class="row">
        <div class="col-md-6">
          <p>Salary: <%= job.wage_lower_bound %> ~ <%= job.wage_upper_bound %> </p>
        </div>
        <div class="col-md-6">
          <p><i class="fa fa-address-card-o" aria-hidden="true"></i>  <%= job.category %></p>
        </div>
      </div>

      <div class="row">
        <div class="col-md-3 col-sm-6">
          <span><i class="fa fa-user-circle-o" aria-hidden="true"></i> <%= job.company %> </span>
        </div>
        <div class="col-md-3 col-sm-6">
          <span><i class="fa fa-location-arrow" aria-hidden="true"></i> <%= job.city %> </span>
        </div>
        <div class="col-md-3 col-sm-6">
          <span><i class="fa fa-clock-o" aria-hidden="true"></i>  <%= time_ago_in_words(job.created_at) %> ago</span>
        </div>
        <div class="col-md-3 col-sm-6">
          <span><i class="fa fa-envelope" aria-hidden="true"></i> <%= job.contact_email %> </span>
        </div>
      </div>
      <hr />
    </div>
  </div>

<% end %>
